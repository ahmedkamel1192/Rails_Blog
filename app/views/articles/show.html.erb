<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>

<p>
  <strong>Favouriets Count:</strong>
  <%= @article.count %>
</p>

<%if !@article.likers.include? @current_user%>
<%= link_to 'Add to favourites', add_favourite_article_path(@article),method: :put %>
<%else%>
<%= link_to 'Remove from favourites', remove_favourite_article_path(@article) ,method: :delete, data: { confirm: 'Are you sure to remove it from favourite?'} %>
<%end%>
<%if @current_user.id == @article.user_id%>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%end%>
<%= link_to 'Back', articles_path %>
